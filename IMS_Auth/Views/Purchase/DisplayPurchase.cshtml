@model IEnumerable<IMS_Auth.Models.Purchase>

@{
    ViewBag.Title = "DisplayPurchase";
}

<h2>Purchase List</h2>

<p>
    @Html.ActionLink("Create New", "PurchaseProduct",null,new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Purchase Product")
        </th>
        <th>
            @Html.DisplayName("Purchase Quntity")
        </th>
        <th>
            @Html.DisplayName("Purchase date")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_Product)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_Quntity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Details", "PurchaseDetail", new { id=item.id }, new {@class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
<input type="hidden" id="hdnMenuCode" value="purchaseproduct" />