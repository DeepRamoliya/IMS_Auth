@model IEnumerable<IMS_Auth.Models.Product>

@{
    ViewBag.Title = "DisplayProduct";
}

<h2>DisplayProduct</h2>

<p>
    @Html.ActionLink("Create New", "CreateProduct")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Quntity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Quntity)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateProduct", new { id=item.id }) |
            @Html.ActionLink("Details", "ProductDetail", new { id=item.id }) |
            @Html.ActionLink("Delete", "DeleteProduct", new { id=item.id })
        </td>
    </tr>
}

</table>
